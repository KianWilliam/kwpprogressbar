<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
	<name>System - approximateloadtime</name>
	<author>KWProductions Co.</author>
	<creationDate>Jan 2023</creationDate>
	<copyright>(C) 2022 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>webarchitect@kwproductions121.ir</authorEmail>
	<authorUrl>kwproductions121.ir</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[This pluging approximates the loadtime of the webpage you run on the site part and saves it in database!<a href='extensions.kwproductions121.ir'>KWProductions Co.</a>]]></description>
	
	<files>
		<filename plugin="approximateloadtime">approximateloadtime.php</filename>
		<filename>index.html</filename>		
	</files>
	<config>
	
		<fields name="params">
			<fieldset name="basic">
			<field 
				name="inup" 
				type="radio"
				label="Execute or Stop Executing the Plugin:"
				description="PLG_APPROXIMATE_LOAD_TIME_DESC"
				default="noaction"
				>
			    <option value="noaction">No Action</option>
				<option value="check">Checking Load Time</option>
				
			</field>
			</fieldset>
		</fields>
	
	</config>
	

	
</extension>
